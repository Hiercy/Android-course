<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bckg">

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:context=".activities.DetailActivity">

        <TextView
            android:id="@+id/detail_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp"
            android:text="@string/title"
            android:textSize="24sp"
            android:textStyle="bold"
            android:textColor="@android:color/white"/>

        <TextView
            android:id="@+id/detail_question_description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/detail_title"
            android:padding="8dp"
            android:text="@string/question_dedscription"
            android:textSize="18sp"
            android:textColor="@android:color/white"/>

        <EditText
            android:id="@+id/answer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="18dp"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="12dp"
            android:layout_below="@+id/detail_question_description"
            android:layout_alignParentStart="true"
            android:layout_toStartOf="@+id/check_answer"
            android:hint="@string/enter_your_answer"
            android:textColorHint="@android:color/white"
            android:textColor="@android:color/white"/>

        <Button
            android:id="@+id/check_answer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            android:layout_below="@+id/detail_question_description"
            android:layout_alignParentEnd="true"
            android:text="@string/check"
            android:textColor="@android:color/white"
            android:background="@color/check_btn"
            android:layout_marginBottom="43dp" />

    </RelativeLayout>
</ScrollView>